<%= render 'users/list' %>
<p>ユーザー登録情報の変更</p>

<%= notice %>

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
    <div class="user-edit-image">
    <%= attachment_image_tag @user, :image, class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size: '100x100' %>
    </div>
    <label class="control-label sr-only" for="inputEmail">Image</label>
    <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user_image" %>
    <h4>名前</h4>
    <%= f.text_field :name, class: "name" %>
    <h4>プロフィール</h4>
    <%= f.text_area :profile, class: "introduction" %>
    <br>
    <%= f.submit '確定' %>
    <% end %>
</div>